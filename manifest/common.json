{
  "manifest_version": 2,
  "name": "Editor",
  "description": "Open an external editor to edit text inputs",
  "version": "0.6.0",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "commands": {
    "edit": {
      "description": "Edit the last used text input with your favorite editor",
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      }
    }
  },
  "browser_action": {
    "default_popup": "src/pages/options/index.html"
  },
  "options_ui": {
    "page": "src/pages/options/index.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/style.css"
      ]
    }
  ],
  "icons": {
    "16": "packages/edit.svg",
    "48": "packages/edit.svg",
    "128": "packages/edit.svg"
  }
}
